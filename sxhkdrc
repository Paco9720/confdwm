#
# Move/resize floating windows
#
super + Left
    xdotool getactivewindow windowmove --relative -- -20 0
super + Down
    xdotool getactivewindow windowmove --relative -- 0 20
super + Up
    xdotool getactivewindow windowmove --relative -- 0 -20
super + Right
    xdotool getactivewindow windowmove --relative -- 20 0

super + alt + Left
    xdotool getactivewindow windowsize --relative -- -20 0
super + alt + Down
    xdotool getactivewindow windowsize --relative -- 0 20
super + alt + Up
    xdotool getactivewindow windowsize --relative -- 0 -20
super + alt + Right
    xdotool getactivewindow windowsize --relative -- 20 0

#
# Multimedia
#
XF86MonBrightnessDown
    brightnessctl set 10%-
XF86MonBrightnessUp
    brightnessctl set +10%
XF86AudioRaiseVolume
    pamixer --increase 5
XF86AudioLowerVolume
    pamixer --decrease 5

super + F11
    brightnessctl set 10%-
super + F12
    brightnessctl set +10%
super + F3
    pamixer --increase 5
super + F2
    pamixer --decrease 5

